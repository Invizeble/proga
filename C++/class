#include <iostream>
#include <vector>
#include <string>
using namespace std;

class Student {
private:
    string name;
    int age;
    int grade;
public:
    Student(string n, int a, int g) : name(n), age(a), grade(g) {}
    int getGrade() const { return grade; }
    string getName() const { return name; }
};

int main() {
    vector<Student> students = {
        Student("Иванов", 18, 5),
        Student("Петров", 19, 4),
        Student("Сидоров", 20, 3),
        Student("Смирнова", 18, 5)
    };

    int otlichnik_grade, horoshist_grade, troeshnik_grade;
    cout << "Введите оценку для отличника: ";
    cin >> otlichnik_grade;
    cout << "Введите оценку для хорошиста: ";
    cin >> horoshist_grade;
    cout << "Введите оценку для троечника: ";
    cin >> troeshnik_grade;

    int otlichniki = 0, horoshisti = 0, troeshniki = 0;

    for (const auto& s : students) {
        if (s.getGrade() == otlichnik_grade) otlichniki++;
        else if (s.getGrade() == horoshist_grade) horoshisti++;
        else if (s.getGrade() == troeshnik_grade) troeshniki++;
    }
    cout << "Отличников: " << otlichniki << endl;
    cout << "Хорошистов: " << horoshisti << endl;
    cout << "Троечников: " << troeshniki << endl;
}
